  <!-- Configured EPD -->
  <xsd:element name="EPDC">
    <xsd:complexType>
      <xsd:sequence>
        <xsd:element name="EPDCId" type="xsd:string" />
        <xsd:element name="Name" type="xsd:string" />
        <xsd:element name="ConfiguratorName" type="xsd:string" minOccurs ="0" />
        <xsd:element name="ConfiguratorCode" type="ConfiguratorIdEnum" />
        <xsd:element name="ConfiguratorVersion" type="xsd:string" />
        <xsd:element name="PublicAddress" type="xsd:string" />
        <xsd:element name="ParentDataBase" type="xsd:integer" />
        <xsd:element name="ParentEPDId" type="xsd:integer" />
        <xsd:element name="TLD" type="xsd:decimal" />
        <xsd:element name="Quantity" type="xsd:decimal" />
        <xsd:element name="UnitId" type="UnitIdEnum"  />
        <xsd:element name="FunctionalUnit" type="xsd:string" minOccurs="0"/>
        <xsd:element name="Standard" type="StandardIdEnum" minOccurs="0"/>
        <xsd:element name="ProductionDate" type="xsd:date" />
        
        <!-- Configuration parameters -->
        <xsd:element name="Parameters">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element maxOccurs="unbounded" name="Parameter">
                <xsd:complexType>
                  <xsd:sequence>
                    <xsd:element name="ParameterId" type="xsd:string" />
                    <xsd:element name="Description" type="xsd:string" minOccurs="0"/>
                    <xsd:element name="Value" type="xsd:decimal" />
                    <xsd:element name="UnitId" type="UnitIdEnum" />
                  </xsd:sequence>
                </xsd:complexType>
              </xsd:element>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>

        <!-- HEALTH -->
        <!-- AirRating : 0 = Non concerné ; 1 = A+ ; 2 = A ; 3 = B ; 4 = C ; 9 = Information non communiquée  -->
        <xsd:element name="AirRating" type="xsd:integer" minOccurs="0"/>
        <xsd:element name="IsHealthNumExist" type="xsd:string" minOccurs="0"/>
        <xsd:element name="HealthNum" type="xsd:string" minOccurs="0"/>
        <xsd:element name="IsContactDrinkingWater" type="xsd:string" minOccurs="0"/>
        <xsd:element name="InfosDrinkingWater" type="xsd:string" minOccurs="0"/>
        <xsd:element name="IsContactNotDrinkingWater" type="xsd:boolean" minOccurs="0"/>
        <xsd:element name="InfosNotDrinkingWater" type="xsd:string" minOccurs="0"/>
        <xsd:element name="OtherHealthInfo" type="xsd:string" minOccurs="0"/>

        <!-- COMFORT -->
        <xsd:element name="ComfortA" type="xsd:string" minOccurs="0"/>
        <xsd:element name="ComfortO" type="xsd:string" minOccurs="0"/>
        <xsd:element name="ComfortV" type="xsd:string" minOccurs="0"/>
        <xsd:element name="ComfortH" type="xsd:string" minOccurs="0"/>
        <xsd:element name="OtherComfort" type="xsd:string" minOccurs="0"/>

        <!--Collection of indicators -->
        <xsd:element name="Indicators" minOccurs="0">
          <xsd:complexType>
            <xsd:sequence>
              <xsd:element maxOccurs="unbounded" name="Indicator">
                <xsd:complexType>
                  <xsd:sequence>
                    <!--Collection of phases -->
                    <xsd:element name="Phases">
                      <xsd:complexType>
                        <xsd:sequence>
                          <xsd:element maxOccurs="unbounded" name="Phase">
                            <xsd:complexType>
                              <xsd:simpleContent>
                                <xsd:extension base="xsd:string">
                                  <xsd:attribute name="PhaseCode" type="xsd:string" use="required" />
                                </xsd:extension>
                              </xsd:simpleContent>
                            </xsd:complexType>
                          </xsd:element>
                        </xsd:sequence>
                      </xsd:complexType>
                    </xsd:element>
                  </xsd:sequence>
                  <xsd:attribute name="IndicatorCode" type="xsd:string" use="required" />
                </xsd:complexType>
              </xsd:element>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
        
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>
</xsd:schema>